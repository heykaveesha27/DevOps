# Stage 1: Build with JDK 21
FROM eclipse-temurin:21-jdk-alpine AS builder
#FROM openjdk:21.0.10-jdk AS builder
WORKDIR /build
#run with 21 in local
# Copy Maven files
COPY mvnw .
COPY .mvn .mvn
COPY pom.xml .

#Make mvnw executable
RUN chmod +x ./mvnw

# Download dependencies (cached layer)
RUN ./mvnw dependency:go-offline -B

# Copy source and build
COPY src src
RUN ./mvnw clean package -DskipTests

# Stage 2: Runtime with JRE 21
FROM eclipse-temurin:21-jre-alpine
#FROM openjdk:21.0.10-jre
WORKDIR /app

# Copy built JAR from builder stage
COPY --from=builder /build/target/spring-boot-docker.jar spring-boot-docker.jar

EXPOSE 8081

ENTRYPOINT ["java", "-jar", "spring-boot-docker.jar"]
pipeline {
    agent any
    
    environment {
        DOCKER_REGISTRY = 'heykaveesha27'
        BACKEND_IMAGE = 'springboot-backend'
        FRONTEND_IMAGE = 'devops-frontend'
        BUILD_TAG = "latest"
        DOCKERHUB_CREDENTIALS = credentials('docker-hub-credentials')
    }
    
    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/heykaveesha27/DevOps.git'
            }
        }
        
        stage('Docker compose'){
		steps{
			script{
				sh'docker build '	
}	
}

}
        
        stage('Push to Docker Hub') {
            steps {
                script {
 
                        sh 'echo ${DOCKERHUB_CREDENTIALS_PSW} | docker login -u ${DOCKERHUB_CREDENTIALS_USR} --password-stdin'
                        
                        // Push Backend
                        sh "docker push ${DOCKER_REGISTRY}/${BACKEND_IMAGE}:${BUILD_TAG}"
                        sh "docker push ${DOCKER_REGISTRY}/${BACKEND_IMAGE}:latest"
                        
                        // Push Frontend
                        sh "docker push ${DOCKER_REGISTRY}/${FRONTEND_IMAGE}:${BUILD_TAG}"
                        sh "docker push ${DOCKER_REGISTRY}/${FRONTEND_IMAGE}:latest"
                    
                }
            }
        }
        
        
    }
    
    post {
        success {
            echo 'Both images built and deployed successfully!'
        }
        failure {
            echo 'Build failed!'
        }
       
    }
}
